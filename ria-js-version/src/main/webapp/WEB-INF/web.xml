<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

    <!-- Display name for the web application. -->
    <display-name>OnlineAuctionsAppRIA</display-name>

    <welcome-file-list>
        <welcome-file>LoginServlet</welcome-file>
    </welcome-file-list>

    <!--
      Context Parameters: Application-wide initialization parameters.
      Used here for database connection details. These are identical to the HTML version.
    -->
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/online_auctions_db</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value> <!-- Replace with your actual DB username -->
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>67934</param-value> <!-- Replace with your actual DB password -->
    </context-param>

    <!--
      Filter Definitions and Mappings.
    -->

    <!-- CharacterEncodingFilter: Ensures UTF-8 encoding for requests and responses. -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>it.polimi.tiw.auctions.filters.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <!-- Mapping for CharacterEncodingFilter: Apply to all requests ("/*"). -->
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- AuthenticationFilter: Protects application resources that require user login. -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>it.polimi.tiw.auctions.filters.AuthenticationFilter</filter-class>
    </filter>
    <!--
      Mapping for AuthenticationFilter.
      Protects the main application shell (app.html) and all API servlet endpoints.
      LoginServlet, login.html, CSS, and JS files are typically excluded by the filter's internal logic.
    -->
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/app.html</url-pattern>                <!-- Main SPA shell -->
        <url-pattern>/HomeServlet</url-pattern>             <!-- Servlet that might serve app.html or initial data -->
        <url-pattern>/SellPageServlet</url-pattern>         <!-- API for sell page data -->
        <url-pattern>/BuyPageServlet</url-pattern>          <!-- API for buy page data -->
        <url-pattern>/CreateItemServlet</url-pattern>       <!-- API for creating items -->
        <url-pattern>/CreateAuctionServlet</url-pattern>    <!-- API for creating auctions -->
        <url-pattern>/AuctionDetailServlet</url-pattern>    <!-- API for auction details -->
        <url-pattern>/CloseAuctionServlet</url-pattern>     <!-- API for closing auctions -->
        <url-pattern>/PlaceBidServlet</url-pattern>         <!-- API for placing bids -->
        <url-pattern>/LogoutServlet</url-pattern>           <!-- Logout should be protected to ensure session exists -->
    </filter-mapping>

    <!--
      Servlet Definitions and Mappings.
      For RIA, servlets primarily act as API endpoints returning JSON.
    -->

    <!-- LoginServlet: Handles login POST requests and GET for displaying login.html. -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- HomeServlet: Serves the main app.html shell or redirects. -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>

    <!-- SellPageServlet: API endpoint for sell page data. -->
    <servlet>
        <servlet-name>SellPageServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.SellPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SellPageServlet</servlet-name>
        <url-pattern>/SellPageServlet</url-pattern>
    </servlet-mapping>

    <!-- CreateItemServlet: API endpoint for creating new items. -->
    <servlet>
        <servlet-name>CreateItemServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.CreateItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateItemServlet</servlet-name>
        <url-pattern>/CreateItemServlet</url-pattern>
    </servlet-mapping>

    <!-- CreateAuctionServlet: API endpoint for creating new auctions. -->
    <servlet>
        <servlet-name>CreateAuctionServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.CreateAuctionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAuctionServlet</servlet-name>
        <url-pattern>/CreateAuctionServlet</url-pattern>
    </servlet-mapping>

    <!-- AuctionDetailServlet: API endpoint for fetching details of a specific auction. -->
    <servlet>
        <servlet-name>AuctionDetailServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.AuctionDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuctionDetailServlet</servlet-name>
        <url-pattern>/AuctionDetailServlet</url-pattern>
    </servlet-mapping>

    <!-- CloseAuctionServlet: API endpoint for closing an auction. -->
    <servlet>
        <servlet-name>CloseAuctionServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.CloseAuctionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CloseAuctionServlet</servlet-name>
        <url-pattern>/CloseAuctionServlet</url-pattern>
    </servlet-mapping>

    <!-- BuyPageServlet: API endpoint for buy page data (search, won auctions). -->
    <servlet>
        <servlet-name>BuyPageServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.BuyPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuyPageServlet</servlet-name>
        <url-pattern>/BuyPageServlet</url-pattern>
    </servlet-mapping>

    <!-- PlaceBidServlet: API endpoint for submitting new bids. -->
    <servlet>
        <servlet-name>PlaceBidServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.PlaceBidServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlaceBidServlet</servlet-name>
        <url-pattern>/PlaceBidServlet</url-pattern>
    </servlet-mapping>

    <!-- LogoutServlet: Handles user logout. -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <!--
      Session Configuration.
      Defines the default timeout for HTTP sessions.
    -->
    <session-config>
        <!-- Session timeout duration in minutes. -->
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>