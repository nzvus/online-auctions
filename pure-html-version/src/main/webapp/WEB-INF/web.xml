<?xml version="1.0" encoding="UTF-8"?>
<!--
  Standard deployment descriptor for a Jakarta EE web application.
  This file configures servlets, filters, session management, context parameters (like database connection details),
  and the welcome file list for the application.
-->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

    <!-- Display name for the web application (e.g., in server administration consoles). -->
    <display-name>OnlineAuctionsApp</display-name>

    <!--
      Welcome file list.
      Specifies the files to be served if a directory is requested without a specific file name.
      Here, LoginServlet is set as the welcome file, meaning requests to the context root
      (e.g., http://localhost:8080/YourAppContext/) will be directed to LoginServlet.
      LoginServlet will then either display the login page or redirect if the user is already logged in.
    -->
    <welcome-file-list>
        <welcome-file>LoginServlet</welcome-file>
    </welcome-file-list>

    <!--
      Context Parameters: Application-wide initialization parameters.
      These are used here to store database connection details, making them accessible
      to all servlets via the ServletContext.
    -->
    <!-- Database JDBC Driver Class -->
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <!-- Database Connection URL -->
    <context-param>
        <param-name>dbUrl</param-name>
        <!--
          Example URL for MySQL. Includes serverTimezone=UTC to avoid timezone issues.
          'online_auctions_db' is the database name.
        -->
        <param-value>jdbc:mysql://localhost:3306/online_auctions_db</param-value>
    </context-param>
    <!-- Database Username -->
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value> <!-- Replace with your actual DB username -->
    </context-param>
    <!-- Database Password -->
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>67934</param-value> <!-- Replace with your actual DB password -->
    </context-param>

    <!--
      Filter Definitions and Mappings.
      Filters intercept requests and responses to perform tasks like character encoding,
      authentication, logging, etc.
    -->

    <!-- CharacterEncodingFilter: Ensures consistent character encoding for requests and responses. -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>it.polimi.tiw.auctions.filters.CharacterEncodingFilter</filter-class>
        <!-- Initialization parameter for the filter, specifying the encoding to use for requests. -->
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <!-- Mapping for CharacterEncodingFilter: Apply to all requests ("/*"). -->
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- AuthenticationFilter: Protects specified resources by requiring user login. -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>it.polimi.tiw.auctions.filters.AuthenticationFilter</filter-class>
    </filter>
    <!--
      Mapping for AuthenticationFilter: Specifies which URL patterns are protected.
      Requests matching these patterns will be intercepted by the AuthenticationFilter.
      LoginServlet itself and static resources (like CSS) are typically excluded within the filter's logic.
    -->
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <!-- List of servlets that require authentication. -->
        <url-pattern>/HomeServlet</url-pattern>
        <url-pattern>/SellPageServlet</url-pattern>
        <url-pattern>/BuyPageServlet</url-pattern>
        <url-pattern>/CreateItemServlet</url-pattern>
        <url-pattern>/CreateAuctionServlet</url-pattern>
        <url-pattern>/AuctionDetailServlet</url-pattern>
        <url-pattern>/CloseAuctionServlet</url-pattern>
        <url-pattern>/PlaceBidServlet</url-pattern>
        <url-pattern>/LogoutServlet</url-pattern>
        <url-pattern>/OfferPageServlet</url-pattern> <!-- Protected resource for placing offers -->
    </filter-mapping>

    <!--
      Servlet Definitions and Mappings.
      Each servlet used in the application must be defined and mapped to one or more URL patterns.
    -->

    <!-- LoginServlet: Handles user login. -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern> <!-- Mapped to /LoginServlet -->
    </servlet-mapping>

    <!-- HomeServlet: Displays the main home page after login. -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>

    <!-- SellPageServlet: Displays the page for selling items and managing created auctions. -->
    <servlet>
        <servlet-name>SellPageServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.SellPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SellPageServlet</servlet-name>
        <url-pattern>/SellPageServlet</url-pattern>
    </servlet-mapping>

    <!-- CreateItemServlet: Handles creation of new items. -->
    <servlet>
        <servlet-name>CreateItemServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.CreateItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateItemServlet</servlet-name>
        <url-pattern>/CreateItemServlet</url-pattern>
    </servlet-mapping>

    <!-- CreateAuctionServlet: Handles creation of new auctions. -->
    <servlet>
        <servlet-name>CreateAuctionServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.CreateAuctionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAuctionServlet</servlet-name>
        <url-pattern>/CreateAuctionServlet</url-pattern>
    </servlet-mapping>

    <!-- AuctionDetailServlet: Displays details of a specific auction. -->
    <servlet>
        <servlet-name>AuctionDetailServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.AuctionDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuctionDetailServlet</servlet-name>
        <url-pattern>/AuctionDetailServlet</url-pattern>
    </servlet-mapping>

    <!-- CloseAuctionServlet: Handles requests to close an auction. -->
    <servlet>
        <servlet-name>CloseAuctionServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.CloseAuctionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CloseAuctionServlet</servlet-name>
        <url-pattern>/CloseAuctionServlet</url-pattern>
    </servlet-mapping>

    <!-- BuyPageServlet: Displays the page for searching and bidding on auctions. -->
    <servlet>
        <servlet-name>BuyPageServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.BuyPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuyPageServlet</servlet-name>
        <url-pattern>/BuyPageServlet</url-pattern>
    </servlet-mapping>

    <!-- PlaceBidServlet: Handles submission of new bids. -->
    <servlet>
        <servlet-name>PlaceBidServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.PlaceBidServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlaceBidServlet</servlet-name>
        <url-pattern>/PlaceBidServlet</url-pattern>
    </servlet-mapping>

    <!-- LogoutServlet: Handles user logout. -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <!-- OfferPageServlet: Displays the page for making an offer on an auction. -->
    <servlet>
        <servlet-name>OfferPageServlet</servlet-name>
        <servlet-class>it.polimi.tiw.auctions.controller.OfferPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OfferPageServlet</servlet-name>
        <url-pattern>/OfferPageServlet</url-pattern>
    </servlet-mapping>

    <!--
      Session Configuration.
      Sets the default timeout for HTTP sessions.
    -->
    <session-config>
        <!-- Session timeout in minutes. After this period of inactivity, the session becomes invalid. -->
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>